<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.xiao.springbootinit.mapper.PostFavourMapper">

    <select id="listFavourPostByPage"
            resultType="cn.xiao.springbootinit.model.entity.Post">
        select p.*
        from t_post p
        join (select post_id from t_post_favour where user_id = #{favourUserId}) pf
        on p.id = pf.post_id ${ew.customSqlSegment}
    </select>
</mapper>
